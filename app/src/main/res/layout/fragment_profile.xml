<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey_background"
    tools:context=".src.View.Fragment.FragmentProfile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:src="@drawable/longan_leaves_background"
                app:strokeWidth="2dp"
                app:shapeAppearanceOverlay="@style/CircularImageView" />


            <!-- Display Name -->
            <TextView
                android:id="@+id/profile_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                tools:text="John Doe"
                android:textColor="@color/text_color_dark"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <!-- Email -->
            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                tools:text="john.doe@example.com"
                android:textColor="@color/text_color_light"
                android:textSize="16sp"/>

            <!-- Change Password Button (Conditional Visibility) -->
            <Button
                android:id="@+id/button_change_password"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Change Password"
                android:textColor="@color/text_color_dark"
                app:icon="@drawable/ic_lock"
                app:iconTint="@color/plant_green"
                app:strokeColor="@color/grey"
                app:cornerRadius="8dp"
                android:paddingVertical="12dp"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"/>

            <!-- Change Display Name Button (Conditional Visibility) -->
            <Button
                android:id="@+id/button_change_display_name"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Change Display Name"
                android:textColor="@color/text_color_dark"
                app:icon="@drawable/ic_username"
            app:iconTint="@color/plant_green"
            app:strokeColor="@color/grey"
            app:cornerRadius="8dp"
            android:paddingVertical="12dp"
            android:gravity="start|center_vertical"
            android:drawablePadding="16dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"/>

            <!-- Link to Email Button (Conditional Visibility for Anonymous) -->
            <Button
                android:id="@+id/button_link_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Link to Email"
                android:backgroundTint="@color/plant_green_light"
                android:textColor="@color/white"
                app:icon="@drawable/ic_mail"
            app:iconTint="@color/white"
            app:cornerRadius="8dp"
            android:paddingVertical="12dp"
            android:gravity="start|center_vertical"
            android:drawablePadding="16dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"/>

            <!-- Log Out Button -->
            <Button
                android:id="@+id/button_log_out"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="@color/design_default_color_error"
                app:strokeColor="@color/design_default_color_error"
                app:cornerRadius="8dp"
                android:paddingVertical="12dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>