<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <!-- Background for swipe-to-delete -->
    <RelativeLayout
        android:id="@+id/delete_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:gravity="end|center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/content_desc_delete_icon"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_label"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/delete_icon"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- The actual history record content (foreground) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/history_card_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/history_img"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_desc_history_image"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/variantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Variant: Leaf Spot Disease"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="26 Oct 2023, 14:35"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/content_desc_delete_button"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@android:color/holo_red_dark"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>
