<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".src.View.Fragment.FragmentHome">

    <!-- Scrollable CardView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:layout_gravity="fill_vertical"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Plant Name -->
                <TextView
                    android:id="@+id/plant_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_dark"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color_dark"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@drawable/rounded_background" />

                <!-- Plant Image -->
                <ImageView
                    android:id="@+id/plant_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/plant_image_des" />

                <!-- Information Section -->
                <LinearLayout
                    android:id="@+id/info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <!-- General Information -->
                    <TextView
                        android:id="@+id/general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_label"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_dark"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_1"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/plant_origin" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_2"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/plant_productivity" />
                    </LinearLayout>

                    <!-- Description -->
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/des_label"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_dark"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_3"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/plant_description" />
                    </LinearLayout>

                    <!-- Tips -->
                    <TextView
                        android:id="@+id/tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tips_label"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_dark"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_4"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/plant_tips" />
                    </LinearLayout>

                    <!-- Growing Methods -->
                    <TextView
                        android:id="@+id/growing_methods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/growing_label"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_dark"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_5"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/branch_pruning" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_6"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/fertilizer" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_7"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/fruit_pruning" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_8"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/pesticide" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_9"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/plant_distance" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_10"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/plant_time" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_11"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/soil" />
                    </LinearLayout>

                    <LinearLayout style="@style/BulletPointLayout"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            style="@style/BulletPointIcon"
                            android:id="@+id/img_12"
                            app:srcCompat="@drawable/ic_leaf_small"
                            android:contentDescription="@string/icon_leaf_des" />
                        <TextView
                            style="@style/BulletPointText"
                            android:id="@+id/other" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/init_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Floating Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|end"
        android:padding="16dp"
        android:clipToPadding="false">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/ic_add_green_24dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/fab_add_des" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_camera_green_24dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/fab_cam_des" />

    </LinearLayout>

</FrameLayout>
