<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_change_display_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_display_name_title"
        android:textColor="@color/text_color_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- New Display Name -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:startIconDrawable="@drawable/ic_username"
        app:endIconDrawable="@drawable/ic_clear"
        app:endIconTint="@color/plant_green"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/plant_green"
        app:hintTextColor="@color/plant_green"
        android:contentDescription="@string/input_display_name_des">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_display_name_hint"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingStart="50dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_submit_change_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:backgroundTint="@color/plant_green"
        android:textColor="@color/white"
        android:paddingVertical="12dp"
        android:contentDescription="@string/submit_button_des" />

</LinearLayout>
