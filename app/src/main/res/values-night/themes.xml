<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhanLoaiNhan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Disable default ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary color. -->
        <item name="colorPrimary">@color/plant_green</item>
        <item name="colorOnPrimary">@color/background_white</item>
        <item name="colorPrimaryVariant">@color/design_default_color_primary_dark</item>
        <item name="android:textColorPrimary">@color/cardview_dark_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_secondary</item>
        <item name="colorSecondaryVariant">@color/background_white</item>
        <item name="colorOnSecondary">@color/plant_green</item>
        <item name="android:textColorSecondary">@color/cardview_dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- FAB icon tint fix -->
        <item name="colorControlNormal">@null</item>

        <item name="colorError">@color/warning</item>
    </style>
    <!-- Styles for bullet points -->
    <style name="BulletPointLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="BulletPointIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:tint">@color/plant_green</item>
    </style>

    <style name="BulletPointText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>